module test;

import math.*;

type UnitConversions {
  static Unit main(Sequence[String] args) {
    SimpleQuantity[Time] day = new SimpleQuantity[Time](1.0, Time.DAY);

    Console.outln("1 day...");
    foreach (BasicUnit[Time] unit in {Time.HOUR, Time.SECOND, Time.MILLISECOND}) {
      Console.out("    = ");
      Console.outln(day.in(unit));
    }
  }
}
